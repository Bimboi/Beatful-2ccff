<resources>
    <!-- Base application theme. -->
    <!-- Changed from DayNight to Light parent theme for applying manual style setting -->
    <style name="Theme.BeatfulPlayer" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textStyle">normal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:titleTextStyle">@style/Theme.BeatfulPlayer.TitleTextStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BeatfulPlayer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.BeatfulPlayer.TitleTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.BeatfulPlayer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BeatfulPlayer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BeatfulPlayer.ButDiff">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Theme.BeatfulPlayer.ButDiff.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>